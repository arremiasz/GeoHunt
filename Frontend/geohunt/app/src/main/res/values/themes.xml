<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoHunt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Make status bar icons dark -->
        <item name="android:windowLightStatusBar" >true</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Theme for activities that don't need an ActionBar -->
    <style name="Theme.GeoHunt.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Inherits parents attributes, can add more customizations here -->
    </style>

</resources>