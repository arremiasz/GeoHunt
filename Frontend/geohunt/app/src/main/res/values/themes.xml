<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.GeoHunt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Forest Green -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color - Amber Gold -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- ActionBar styling -->
        <item name="actionBarStyle">@style/Widget.GeoHunt.ActionBar</item>
        
        <!-- Bottom Navigation styling -->
        <item name="bottomNavigationStyle">@style/Widget.GeoHunt.BottomNavigation</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Widget.GeoHunt.Button</item>
        
        <!-- TextInputLayout styling -->
        <item name="textInputStyle">@style/Widget.GeoHunt.TextInputLayout</item>
    </style>

    <!-- Theme for activities that don't need an ActionBar -->
    <style name="Theme.GeoHunt.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
    </style>

    <!-- ActionBar Theme -->
    <style name="Widget.GeoHunt.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/primary</item>
        <item name="titleTextColor">@color/on_primary</item>
    </style>
    
    <!-- Bottom Navigation Theme -->
    <style name="Widget.GeoHunt.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="elevation">8dp</item>
        <item name="itemRippleColor">@color/primary_light</item>
    </style>
    
    <!-- Primary Button Style -->
    <style name="Widget.GeoHunt.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Secondary Button Style -->
    <style name="Widget.GeoHunt.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_primary</item>
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="Widget.GeoHunt.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Danger Button Style -->
    <style name="Widget.GeoHunt.Button.Danger" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/on_error</item>
        <item name="backgroundTint">@color/button_danger</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- TextInputLayout Style -->
    <style name="Widget.GeoHunt.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.GeoHunt.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.GeoHunt.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.GeoHunt.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.GeoHunt.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.GeoHunt.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.GeoHunt.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_hint</item>
    </style>

</resources>