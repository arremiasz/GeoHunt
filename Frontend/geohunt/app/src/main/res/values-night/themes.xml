<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark mode theme -->
    <style name="Theme.GeoHunt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Lighter green for dark mode -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color - Amber Gold -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Dark mode background -->
        <item name="android:colorBackground">#FF121212</item>
        <item name="colorSurface">#FF1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- ActionBar styling -->
        <item name="actionBarStyle">@style/Widget.GeoHunt.ActionBar.Dark</item>
    </style>

    <!-- ActionBar Theme for Dark Mode -->
    <style name="Widget.GeoHunt.ActionBar.Dark" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/primary_dark</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>